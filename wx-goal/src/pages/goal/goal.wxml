<!--goal.wxml-->
<view class="container">
    <view class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="achive-text">{{appIntro}}</text>
    </view>
    <view class="form-area">
        <view class="text-area">
            <input type="text" placeholder="{{newGoalIntro}}" bindinput="bindNewGoalInput"/>
        </view>
    </view>
    <view class="btn-area">
        <button type="{{newGoalBtnInfo.btnType}}" size="{{newGoalBtnInfo.btnSize}}" bindtap="{{newGoalBtnInfo.handler}}">{{newGoalBtnInfo.text}}</button>
    </view>
</view>