<!--goal.wxml-->
<view class="container">
    <view class="userinfo">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    </view>
    <view class="">
        <text>{{text}}</text>
    </view>
    <view class="button-area">
        <button type="{{newGoalInfo.btnType}}" size="{{newGoalInfo.btnSize}}" bindtap="{{newGoalInfo.handler}}">{{newGoalInfo.text}}</button>
    </view>
</view>